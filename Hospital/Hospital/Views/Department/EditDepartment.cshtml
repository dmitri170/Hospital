@model Hospital.Models.Department

@{
    ViewData["Title"] = "EditDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditDepartment</h2>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentId" />
            <div class="form-group">
                <label asp-for="NameDepartments" class="control-label"></label>
                <input asp-for="NameDepartments" class="form-control" />
                <span asp-validation-for="NameDepartments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberPlace" class="control-label"></label>
                <input asp-for="NumberPlace" class="form-control" />
                <span asp-validation-for="NumberPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
