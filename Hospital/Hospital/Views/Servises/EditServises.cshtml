@model Hospital.ViewModels.ServisesViewModels.ServisesViewModel

@{
    ViewData["Title"] = "EditServises";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditServises</h2>

<h4>Servise</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditServises">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Servises.First().ServisesId" class="control-label"></label>
                <input asp-for="Servises.First().ServisesId" class="form-control" readonly />
                <span asp-validation-for="Servises.First().ServisesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servises.First().NameType" class="control-label"></label>
