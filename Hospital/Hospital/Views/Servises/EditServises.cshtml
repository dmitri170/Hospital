                <label asp-for="Servises.First().PriceService" class="control-label"></label>
                <input asp-for="Servises.First().PriceService" class="form-control" />
                <span asp-validation-for="Servises.First().PriceService" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servises.First().ProvisionId" class="control-label"></label>
                <select asp-for="Servises.First().ProvisionId" class="form-control" asp-items="Model.ProvisionList"></select>
                <span asp-validation-for="Servises.First().ProvisionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servises.First().DataPrice" class="control-label"></label>
                <input asp-for="Servises.First().DataPrice" class="form-control" />
                <span asp-validation-for="Servises.First().DataPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
