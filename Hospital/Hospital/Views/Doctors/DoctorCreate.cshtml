@model Hospital.Models.Doctor

@{
    ViewData["Title"] = "DoctorCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DoctorCreate</h2>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoctorCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label"></label>
                <select asp-for="DepartmentId" class ="form-control" asp-items="ViewBag.DepartmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DoctorSurnames" class="control-label"></label>
                <input asp-for="DoctorSurnames" class="form-control" />
                <span asp-validation-for="DoctorSurnames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorNames" class="control-label"></label>
                <input asp-for="DoctorNames" class="form-control" />
                <span asp-validation-for="DoctorNames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialties" class="control-label"></label>
                <input asp-for="Specialties" class="form-control" />
                <span asp-validation-for="Specialties" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categories" class="control-label"></label>
                <input asp-for="Categories" class="form-control" />
                <span asp-validation-for="Categories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
