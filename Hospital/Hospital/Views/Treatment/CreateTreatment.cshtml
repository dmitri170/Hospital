@model Hospital.Models.Treatment

@{
    ViewData["Title"] = "CreateTreatment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateTreatment</h2>

<h4>Treatment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTreatment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorsId" class="control-label"></label>
                <select asp-for="DoctorsId" class="form-control" asp-items="ViewBag.DoctorsId">
                    <option>Выберите фамилию врача</option>
                </select>
                <span asp-validation-for="DoctorsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacientsId" class="control-label"></label>
                <select asp-for="PacientsId" class="form-control" asp-items="ViewBag.PacientsId">
                    <option>Выберите фамилию пациента</option>
                </select>
                <span asp-validation-for="PacientsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label"></label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId">
                    <option>Выберите название отделения</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptDate" class="control-label"></label>
                <input asp-for="ReceiptDate" class="form-control" />
                <span asp-validation-for="ReceiptDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DischargeDate" class="control-label"></label>
                <input asp-for="DischargeDate" class="form-control" />
                <span asp-validation-for="DischargeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
